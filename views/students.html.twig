<html>
<head>
    <title>Registrar</title>
    <link rel="stylesheet" type="text/css" href="styles/mystyle.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
</head>
<body>
    <center>
        <hr>
    <h1>Students</h1>

        {% if students is not empty %}
        <p>Here are all your students:</p>
        <ul>
            {% for student in students %}
                <li><a href="/students/{{ student.getId }}">{{ student.getStudentName }}</a></li>
            {% endfor %}
        </ul>
    {% endif %}
    <!-- link to students.html.twig -->
    <form action='/students' method='post'>
        <label for='name'>Student name</label>
        <input id='name' name='name' type='text'>

        <button type='submit'>Add student</button>
    </form>
    <form action='/delete_students' method='post'>
        <button type='submit'>Clear</button>
    </form>

    <!-- this is the spot for CRUD methods -->
    <!-- need a -->



<hr> 

    <p><a href='/'>Home</a></p>
</body>
</html>
